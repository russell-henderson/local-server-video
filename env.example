# Local Video Server Configuration
# Copy this file to .env and modify as needed

# Server Settings
LVS_HOST=127.0.0.1
LVS_PORT=5000
LVS_DEBUG=false

# Video Settings
LVS_VIDEO_DIRECTORY=videos
LVS_THUMBNAIL_DIRECTORY=static/thumbnails
LVS_ENABLE_THUMBNAILS=true
LVS_THUMBNAIL_QUALITY=85

# Performance Settings
LVS_CACHE_TIMEOUT=3600
LVS_MAX_CACHE_SIZE=1000

# Search Settings
LVS_SEARCH_ENABLED=true
LVS_SEARCH_INDEX_ON_STARTUP=true

# Monitoring Settings
LVS_ENABLE_ANALYTICS=true
LVS_LOG_LEVEL=INFO

# Security Settings
LVS_ENABLE_CORS=false
# LVS_ALLOWED_ORIGINS=http://localhost:3000,https://mydomain.com